    "#This is meant for educational purposes to explore web scrapers/crawlers for Machine Learning.\n",
    "\n",
    "import os\n",
    "import json \n",
    "import requests as req # to sent GET requests\n",
    "from bs4 import BeautifulSoup # to parse HTML\n",
    "from urllib.request import urlretrieve\n",
    "#we need a user agent because google images need more info about our system, etc\n",
    "#they will reject the GET request if its not there\n",
    "#do a quick google search if you want any specific user agent\n",
    "#the user agent mimics a json obj using python dict\n",
    "usr_agent = {\n",
    "    'User-Agent': 'Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.11 (KHTML, like Gecko) Chrome/23.0.1271.64 Safari/537.11',\n",
    "    'Accept': 'text/html,application/xhtml+xml,application/xml;q=0.9,*/*;q=0.8',\n",
    "    'Accept-Charset': 'ISO-8859-1,utf-8;q=0.7,*;q=0.3',\n",
    "    'Accept-Encoding': 'none',\n",
    "    'Accept-Language': 'en-US,en;q=0.8',\n",
    "    'Connection': 'keep-alive',\n",
    "}\n",
    "#Go to google images search for the image\n",
    "#add any link to google_url here\n",
    "#the google_url i've added if of cat just as an example\n",
    "google_url = 'https://www.google.co.in/search?hl=en&tbm=isch&source=hp&biw=1920&bih=937&ei=2dY0X4zsJNif4-EP5rG0qAg&q=cat'\n",
    "response = req.get(google_url,  headers=usr_agent)\n",
    "\n",
    "soup = BeautifulSoup(response.text, 'html.parser')\n",
    "\n",
    "links = []\n",
    "#the html tag where images & gifs is under the img class \"rg_i Q4LuWd\", many people on youtube who have tutorials \n",
    "#on scrapers have rg_meta as their class\n",
    "#idk if it depends on the region or its the same for everyone\n",
    "x = soup.find_all('img', {'class' : 'rg_i Q4LuWd'})\n",
    "\n",
    "z=0\n",
    "for img in x:\n",
    "    \n",
    "    try:\n",
    "        #basically the google image search results also tend to have gifs with images, if you would like both \n",
    "        #just remove the if elif and dissolve to into one line\n",
    "        if 'data:image/gif;base64' not in img['src']:\n",
    "            links.append(img['src'])\n",
    "        elif 'data:image/jpeg;base64' in img['src']:\n",
    "            z+=1\n",
    "    except KeyError:\n",
    "        #sometimes the images are located as protected...... as the link are stored in the data-src attribute\n",
    "        if 'data:image/gif;base64' not in img['data-src']:\n",
    "            links.append(img['data-src'])\n",
    "        elif 'data:image/jpeg;base64' in img['data-src']:\n",
    "            z+=1\n",
    "try:\n",
    "    #create the folder where you want to store the images\n",
    "    os.mkdir('cats')\n",
    "except FileExistsError:\n",
    "    pass\n",
    "#i is the number of images you want from i...n\n",
    "i=0\n",
    "for l, img_link in enumerate(links):\n",
    "    #change value of max images you want by changing i<num, num(1...n) here i've taken num as 100,
    "    #you might not get 100 images as some can be gifs or links are too few \n",
    "    if i<100:\n",
    "        print(l,img_link)\n",
    "        img_data = req.get(img_link).content\n",
    "        with open('cats/' + 'cats ' + str(i) +'.jpg' , 'wb+') as f:\n",
    "            #f.write(img_data)\n",
    "        i+=1\n",
    "    else:\n",
    "        f.close()\n",
    "        break\n",
    "print(i, 'images downloaded')\n",
    "print(\"Done\")"
   ]
